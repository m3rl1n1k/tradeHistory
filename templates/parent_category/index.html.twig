{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>
    <div class="row">
        <h4>Create:</h4>
        <div class="col">
            {{ include('component/_link_succes.html.twig', {
                'href': path('app_parent_category_new'),
                'link_label':'Main category'}) }}
            {{ include('component/_link_succes.html.twig', {
                'href': path('app_category_new'),
                'link_label': 'Sub category',
                'aditional_class':'mx-4'
            }) }}
        </div>
    </div>
    <div class="row mt-5">
        {% for key, categories in parent_categories %}
            {% if categories is not empty %}
                <div class="col-lg-6 col-md-12 my-3">
                    <div class="card">
                        <div class="card-header">
                            {{ key }}
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for key, category in categories %}
                                <li class="list-group-item" {{ contrast(category.color) }}>
                                    <svg class="bi">
                                        <use xlink:href="#arrow-return-right"></use>
                                    </svg>
                                    {{ category.name }}
                                    <span class="float-end mx-2">{{ include('category/_delete_form.html.twig') }}</span>
                                    <a class="btn btn-sm btn-warning float-end"
                                       href="{{ path('app_category_edit' ,{'id' : category.id}) }}">Edit</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
