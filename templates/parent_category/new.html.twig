{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h3>Create new category</h3>
    {{ include('parent_category/_form.html.twig') }}
    <div class="row mt-5">
        <table class="table table-hover table-responsive">
            <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for parent_category in parent_categories %}
                <tr>
                    <td {{ contrast(parent_category.color) }}>{{ parent_category.name }}</td>
                    <td>{{ include('parent_category/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
