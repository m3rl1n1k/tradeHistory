<form class="float-end" method="post" action="{{ path('app_wallet_delete', {'number': wallet.number}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ wallet.number) }}">
    <button class="btn btn-danger text-white bg-red-500 hover:bg-red-600 rounded-lg px-4 py-2">
        Delete
    </button>
</form>
