{{ form_start(form, {'attr': {'class': 'space-y-6 bg-white dark:bg-gray-700 p-6 rounded-lg shadow-lg'}}) }}
{# {{ include('component/_alert.html.twig') }} #}
<div class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {% for field in [form.currency, form.name, form.amount, form.isMain] %}
            <div class="mt-3">
                <div class="w-full sm:w-80">
                    <label for="{{ field.vars.id }}"
                           class="block text-gray-900 dark:text-gray-300 font-semibold mb-2">
                        {{ field.vars.label|default('Field') }}
                    </label>

                    {{ form_widget(field, {
                        'attr': {
                            'class': 'w-full p-3 rounded-md border text-gray-900 dark:text-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent ' ~
                            (field.vars.errors|length > 0 ? 'border-red-500 dark:border-red-400' : 'border-gray-300 dark:bg-gray-800 dark:border-gray-600')
                        }
                    }) }}

                    {% if field.vars.errors|length > 0 %}
                        <p class="text-red-500 dark:text-red-400 text-sm mt-1">
                            {{ field.vars.errors[0].message }}
                        </p>
                    {% endif %}
                </div>
            </div>
        {% endfor %}

    </div>
    {#    <div class="mt-3 flex items-center"> #}
    {#        {{ form_errors(form.isMain) }} #}
    {#        <label for="isMain" #}
    {#               class="form-check-label mr-2 text-gray-900 dark:text-gray-300 font-semibold">{{ 'Main wallet:' }}</label> #}
    {#        {{ form_widget(form.isMain, {'attr': {'class': 'form-check-input'}}) }} #}
    {#    </div> #}
    <div class="mt-4 flex justify-between items-center">
        {{ include('component/_button.html.twig') }}
        {{ include('component/_link.html.twig', {'href': path('app_wallet_index') }) }}
    </div>
</div>

{{ form_end(form) }}