{% extends 'main_base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="h-full flex flex-col justify-center py-5 px-4">
        <h1 class="text-4xl font-bold text-center mb-8 text-gray-300">Register</h1>

        <div class="max-w-lg mx-auto p-6 rounded-lg shadow-lg">
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}

            <div class="space-y-4">
                <div class="mb-4">
                    <label for="{{ registrationForm.email.vars.id }}" class="block text-sm font-medium text-gray-300">Email</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'text-gray-200 mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm text-gray-600'}}) }}
                </div>

                <div class="mb-4">
                    <label for="{{ registrationForm.plainPassword.vars.id }}"
                           class="block text-sm font-medium text-gray-300">Password</label>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'text-gray-200 mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm text-gray-600'}}) }}
                </div>

                <div class="flex items-center mb-4">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-sm text-gray-200">
                        Agree with <a href="{{ path('app_registration_terms') }}" class="text-blue-500 hover:underline">terms</a>
                    </label>
                </div>

                <div class="flex flex-col space-y-4">
                    <button type="submit"
                            class="bg-blue-500 text-white w-full py-2 px-4 rounded-md hover:bg-blue-600 transition">
                        Register
                    </button>
                    <a href="{{ path('app_login') }}"
                       class="text-center text-sm text-blue-500 hover:text-blue-700 transition">Login</a>
                </div>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}