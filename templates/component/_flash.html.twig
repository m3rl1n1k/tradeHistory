{% for key, messages in app.flashes %}
    {% if key is same as 'success' %}
        {% for message in messages %}
            <div class="fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50">
                {{ message }}
                <button type="button" class="ml-2 text-white hover:text-gray-300" onclick="this.parentElement.remove();">&times;</button>
            </div>
        {% endfor %}
    {% endif %}
    {% if key is same as 'info' %}
        {% for message in messages %}
            <div class="fixed top-4 right-4 bg-blue-500 text-white px-4 py-2 rounded shadow-lg z-50">
                {{ message }}
                <button type="button" class="ml-2 text-white hover:text-gray-300" onclick="this.parentElement.remove();">&times;</button>
            </div>
        {% endfor %}
    {% endif %}
    {% if key is same as 'error' %}
        {% for message in messages %}
            <div class="fixed top-4 right-4 bg-red-500 text-white px-4 py-2 rounded shadow-lg z-50">
                {{ message }}
                <button type="button" class="ml-2 text-white hover:text-gray-300" onclick="this.parentElement.remove();">&times;</button>
            </div>
        {% endfor %}
    {% endif %}
{% endfor %}
