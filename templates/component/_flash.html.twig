{% for key, messages in app.flashes %}
    {% if key is same as 'success' %}
        {% for message in messages %}
            <div class="success fixed bottom-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50"
                 data-autoclose>
                {{ message }}
                <button type="button" class="ml-2 text-white hover:text-gray-300"
                        onclick="fadeOutAndRemove(document.querySelector('.success'))">&times;
                </button>
            </div>
        {% endfor %}
    {% endif %}
    {% if key is same as 'info' %}
        {% for message in messages %}
            <div class="info fixed bottom-4 right-4 bg-blue-500 text-white px-4 py-2 rounded shadow-lg z-50"
                 data-autoclose>
                {{ message }}
                <button type="button" class="ml-2 text-white hover:text-gray-300"
                        onclick="fadeOutAndRemove(document.querySelector('.info'))">&times;
                </button>
            </div>
        {% endfor %}
    {% endif %}
    {% if key is same as 'error' %}
        {% for message in messages %}
            <div class="error fixed bottom-4 right-4 bg-red-500 text-white px-4 py-2 rounded shadow-lg z-50"
                 data-autoclose>
                {{ message }}
                <button type="button" class="ml-2 text-white hover:text-gray-300"
                        onclick="fadeOutAndRemove(document.querySelector('.error'))">&times;
                </button>
            </div>
        {% endfor %}
    {% endif %}
{% endfor %}