{% extends 'base.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form) }}
        {{ include('component/_alert.html.twig') }}

        <div class="mb-6">
            <div class="offset-lg-2 lg:col-lg-7 md:col-12 mt-3">
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'mt-1 p-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            </div>
        </div>

        <div class="mt-4">
            <button class="px-6 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400">
                {{ button_label|default('Send') }}
            </button>
        </div>

        {{ form_end(form) }}

        {% if is_granted("ROLE_FEEDBACK_CHECKER") %}
            {{ include('feedback/_feedback_list.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
