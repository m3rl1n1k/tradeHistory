{% extends 'base.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block body %}
        {{ form_start(form, {'attr': {'class': 'space-y-6 bg-white dark:bg-gray-700 p-6 rounded-lg shadow-lg'}}) }}
        {{ include('component/_alert.html.twig') }}

        <div class="space-y-6 mb-9">
            <div class="mb-6">
                <div class="w-full sm:w-80">
                    {{ form_label(form.message, 'Message', {'label_attr': {'class': 'block text-gray-900 dark:text-gray-300 font-semibold mb-2'}}) }}
                    {{ form_widget(form.message, {
                        'attr': {
                            'class': 'custom-size w-full p-3 rounded-md border border-gray-300 dark:bg-gray-800 dark:border-gray-600 text-gray-900 dark:text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'
                        }
                    }) }}
                </div>
            </div>

            <div class="flex space-x-4 mt-6">
                <div>
                    <button class="px-6 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400">
                        {{ button_label|default('Send') }}
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}


        {% if is_granted("ROLE_FEEDBACK_CHECKER") %}
            {{ include('feedback/_feedback_list.html.twig') }}
        {% endif %}
{% endblock %}