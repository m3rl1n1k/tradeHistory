{% extends 'base.html.twig' %}

{% block title %}Budget{% endblock %}

{% block body %}
    <h1>Budget</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ budget.id }}</td>
            </tr>
            <tr>
                <th>Amout</th>
                <td>{{ budget.amout }}</td>
            </tr>
