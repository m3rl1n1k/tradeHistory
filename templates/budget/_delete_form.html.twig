<form class="float-end" method="post" action="{{ path('app_budget_delete', {'id': category.budgetId}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.budgetId) }}">
    <button class="text-sm text-red-500 dark:text-red-400 hover:cursor-pointer">Delete</button>
</form>