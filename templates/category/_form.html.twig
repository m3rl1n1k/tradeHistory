{{ form_start(form) }}
{{ include('component/_alert.html.twig') }}
<div class="grid grid-cols-1 gap-4">
    <div class="mt-3">
        <div class="flex items-center border rounded-lg overflow-hidden">
            <span class="bg-gray-200 px-4 py-2 text-gray-700">{{ form_label(form.ParentCategory, 'Main', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}</span>
            {{ form_widget(form.ParentCategory, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
        </div>
        <div class="flex items-center border rounded-lg overflow-hidden mt-3">
            <span class="bg-gray-200 px-4 py-2 text-gray-700">{{ form_label(form.name, 'Category', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}</span>
            {{ form_widget(form.name, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
            {% if app.user.setting.coloredCategories %}
                <span class="bg-gray-200 px-4 py-2 text-gray-700">{{ form_widget(form.color, {'attr': {'class': 'w-10 h-10 border border-gray-300 rounded-md'}}) }}</span>
            {% endif %}
        </div>
    </div>
    <div class="mt-4 flex space-x-2">
        {{ include('component/_button.html.twig') }}
        {{ include('component/_link.html.twig', {'href' : path('app_parent_category_index') }) }}
    </div>
</div>
{{ form_end(form) }}
