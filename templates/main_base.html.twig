<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    {% block stylesheets %}
    {% endblock %}
</head>
<body class="bg-gray-900 text-white max-h-screen">
<header class="flex justify-between items-center p-4 bg-gray-800 shadow-md">
    <div class="text-xl font-semibold dark:text-white" id="title">{{ 'index.title'|trans({}, 'base') }}</div>
    <div class="flex items-center space-x-4 max-w-full">
        <a href="{{ path('app_faq_main') }}">FAQ</a>
    </div>
</header>
<div class="container mx-auto p-4">
    {% block body %} {% endblock body %}
</div>


{% block javascripts %}
{% endblock %}
</body>
</html>