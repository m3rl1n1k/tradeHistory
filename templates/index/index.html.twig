{% extends 'base.html.twig' %}

{% block title %}{{ 'index.title'|trans({}, 'translation') }}{% endblock %}

{% block body %}
    {% if app.user.currency() is empty %}
        <div class="row mt-3">
            <a href="{{ path('app_user_index', { 'id':app.user.id() }) }}"
               class="btn btn-lg btn-danger">{{ 'menu.set_currency'|trans({}, 'translation') }}</a>
        </div>
    {% endif %}
    <div class="row mt-3 d-none d-md-block">
        <div class="mt-2 col-md-4 col-sm-12 col-lg-3"><a href="{{ path('app_transaction_new') }}"
                                                         class="btn btn-outline-success w-100">{{ 'menu.transaction'|trans({}, 'translation') }}
                <svg class="bi">
                    <use xlink:href="#plus"></use>
                </svg>
            </a>
        </div>
        <div class="mt-2 col-md-4 col-sm-12 col-lg-3"><a href="{{ path('app_transfer_new') }}"
                                                         class="btn btn-outline-success w-100">{{ 'menu.transfer'|trans({}, 'translation') }}
                <svg class="bi">
                    <use xlink:href="#plus"></use>
                </svg>
            </a>
        </div>
        <div class="mt-2 col-md-4 col-sm-12 col-lg-3"><a href="{{ path('app_sub_category_new') }}"
                                                         class="btn btn-outline-success w-100">{{ 'menu.category'|trans({}, 'translation') }}
                <svg class="bi">
                    <use xlink:href="#plus"></use>
                </svg>
            </a>
        </div>
        <div class="mt-2 col-md-4 col-sm-12 col-lg-3"><a href="{{ path('app_budget_new') }}"
                                                         class="btn btn-outline-success w-100">{{ 'menu.budget'|trans({}, 'translation') }}
                <svg class="bi">
                    <use xlink:href="#plus"></use>
                </svg>
            </a>
        </div>
    </div>
    {% if  chart is not null %}
        <div class="row">
            <div class="col-md-6 col-sm-12">
                {{ include('component/_chart.html.twig') }}
            </div>
            <div class="col-md-6 col-sm-12 mt-5">
                <div class="row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"> {{ 'index.card.total'|trans({}, 'translation') }}</h5>
                                <p class="card-text"> {{ 'index.card.description'|trans({}, 'translation') }}</p>
                                <span href="#"
                                      class="text-bg-primary p-2 rounded-2"> {{ amount ? amount : 0 }} {{ app.user.currency }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="my-3">
            <h4 class="text-info">{{ 'index.chart_not_available'|trans({}, 'translation') }}</h4>
        </div>
    {% endif %}


    <div class="row mt-5">
        <h2>{{ 'index.last_transaction'|trans({}, 'translation') }} </h2>
        <table class="table table-hover table-responsive">
            <thead>
            </thead>
            <tbody>
            {% for  transaction in last10transaction %}
                <tr>
                    <td>{{ include('component/_transaction_type.html.twig') }}</td>
                    <td class="text-center">
                        <a class="btn {{ color(transaction.type) }} text-decoration-none"
                           href="{{ path('app_transaction_show', {'id': transaction.id}) }}">{{ transaction.amount }}</a>
                    </td>
                    <td>{{ transaction.subCategory ? transaction.subCategory.name : '' }}</td>
                    <td>{{ transaction.wallet ? transaction.wallet.number : '' }}</td>
                    <td>{{ transaction.date ? transaction.date|date('d M') : '' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{{ 'index.not_found_records'|trans({}, 'translation') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}