{% extends 'base.html.twig' %}

{% block title %}{{ 'index.title'|trans({}, 'translation') }}{% endblock %}

{% block stylesheets %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
{% endblock %}

{% block body %}
    {% if app.user.currency() is empty %}
        <div class="mt-3">
            <a href="{{ path('app_user_index', { 'id':app.user.id() }) }}"
               class="bg-red-500 text-white px-6 py-3 rounded-lg text-lg hover:bg-red-600 transition-colors">
                {{ 'set_currency'|trans({}, 'menu') }}
            </a>
        </div>
    {% endif %}
    <main class="flex-1 p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 dark:text-gray-300">
            <div class="bg-white dark:bg-gray-600 shadow-lg p-4 rounded-lg">
                <h3 class="text-lg font-semibold">Quick</h3>
                <a href="{{ path('app_category_new') }}" class="w-full bg-blue-500 text-white p-2 rounded-lg mt-4">
                    Add {{ 'category'|trans({}, 'menu') }}</a>
                <a href="{{ path('app_transaction_new') }}" class="w-full bg-green-500 text-white p-2 rounded-lg mt-4">
                    Add {{ 'transaction'|trans({}, 'menu') }}</a>
            </div>
            <div class="bg-white dark:bg-gray-600 shadow-lg p-4 rounded-lg dark:text-gray-300">
                <h3 class="text-lg font-semibold">Expense by month</h3>
                <canvas id="expenseChart"></canvas>
            </div>
            <div class="bg-white dark:bg-gray-600 shadow-lg p-4 rounded-lg dark:text-gray-300 flex justify-between ">
                <div class="">
                    <h3 class="text-lg font-semibold">{{ 'index.last_transaction'|trans({}, 'translation') }}</h3>
                    <ul class="space-y-2 over">
                        {% if last_transaction|length > 0 %}
                            {% for transaction in last_transaction %}
                                <li><a class="text-decoration-none {{ color(transaction.type) }} hover:underline"
                                       href="{{ path('app_transaction_show', {'id': transaction.id}) }}">
                                        {{ transaction.amount }} -
                                        {{ transaction.category.name ?? '' }} -
                                        {{ transaction.date|date('d M') }}
                                    </a>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li>{{ 'index.not_found_records'|trans({}, 'translation') }}</li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            <div class="bg-white dark:bg-gray-600 shadow-lg p-4 rounded-lg dark:text-gray-300 flex justify-between ">
                <div class="">
                    <h3 class="text-lg font-semibold">{{ 'index.card.total'|trans({}, 'translation') }}</h3>
                    <p class="text-2xl font-bold text-green-600">+{{ amount ? amount : 0 }} {{ app.user.currency }}</p>
                    <ul class="space-y-2 over">
                        {% if app.user.wallets|length > 0 %}
                            {% for wallet in app.user.wallets %}
                                <li>{{ wallet.name ?? wallet.number }} - {{ wallet.amount }} {{ wallet.currency }}</li>
                            {% endfor %}
                        {% else %}
                            <li>Not found any wallet yet</li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </main>
    <div class="mt-3 md:flex space-x-3 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="mt-2 md:w-1/3 sm:w-full lg:w-1/4">
            <a href=""
               class="bg-green-500 text-white w-full flex items-center justify-center py-3 px-4 rounded-lg hover:bg-green-600 transition-all">
                <span class="text-lg">{{ 'transaction'|trans({}, 'menu') }}</span>
            </a>
        </div>
        <div class="mt-2 md:w-1/3 sm:w-full lg:w-1/4">
            <a href=""
               class="bg-green-500 text-white w-full flex items-center justify-center py-3 px-4 rounded-lg hover:bg-green-600 transition-all">
                <span class="text-lg">{{ 'category'|trans({}, 'menu') }}</span>
            </a>
        </div>
        <div class="w-full mt-2">
            <div class="flex">
                <div class="w-full sm:w-1/2 mb-3 sm:mb-0">
                    <div class="bg-white shadow rounded-lg">
                        <div class="p-4">
                            <h5 class="text-lg font-semibold">{{ 'index.card.total'|trans({}, 'translation') }}</h5>
                            <p class="text-gray-600">{{ 'index.card.description'|trans({}, 'translation') }}</p>
                            <span class="text-gray-600 py-2 px-3 rounded-md">

                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if chart is not null %}
        <div class="mt-5 flex flex-wrap">
            <div class="w-full md:w-1/2">
                <div class="w-1/2 mx-auto">
                    <div class="my-3">
                        {{ render_chart(chart)|raw }}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="my-3">
            <h4 class="text-blue-500">{{ 'index.chart_not_available'|trans({}, 'translation') }}</h4>
        </div>
    {% endif %}
{% endblock %}